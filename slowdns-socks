#!/bin/bash

# Verificar root
if [[ $EUID -ne 0 ]]; then
    echo "Este script debe ejecutarse como root"
    exit 1
fi

clear

# Colores
RED='\033[1;31m'
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
WHITE='\033[1;37m'
RESET='\033[0m'

# Barra limpia
fun_bar() {
    (
        eval "$1" > /dev/null 2>&1
        touch $HOME/fim
    ) &
    tput civis
    echo -ne "  ESPERANDO ["
    while true; do
        for ((i=0;i<18;i++)); do
            echo -ne "#"
            sleep 0.1
        done
        [[ -e $HOME/fim ]] && rm $HOME/fim && break
        echo -ne "]"
        sleep 1
        tput cuu1 && tput dl1
        echo -ne "  ESPERANDO ["
    done
    echo -e "] OK"
    tput cnorm
}

echo -e "${RED}════════════════════════════════════════════${RESET}"
echo -e "${GREEN}        INSTALADOR SLOWDNS SOCKS${RESET}"
echo -e "${RED}════════════════════════════════════════════${RESET}"
echo ""

# Actualizar sistema
actualizar() {
apt update -y && apt upgrade -y
}
echo "Actualizando sistema..."
fun_bar actualizar

# Instalar dependencias
instalar_dependencias() {
apt install screen cron iptables -y
systemctl restart cron
}
echo "Instalando dependencias..."
fun_bar instalar_dependencias

# Crear carpeta
mkdir -p /etc/slowdns

# Configurar firewall seguro
configurar_firewall() {
iptables -C INPUT -p udp --dport 5300 -j ACCEPT 2>/dev/null || \
iptables -I INPUT -p udp --dport 5300 -j ACCEPT

iptables -t nat -C PREROUTING -p udp --dport 53 -j REDIRECT --to-ports 5300 2>/dev/null || \
iptables -t nat -I PREROUTING -p udp --dport 53 -j REDIRECT --to-ports 5300
}
echo "Configurando firewall..."
fun_bar configurar_firewall

# Configurar inicio automático
configurar_rc() {
RC="/etc/rc.local"
if [ ! -f "$RC" ]; then
    echo -e "#!/bin/bash\n\nexit 0" > $RC
    chmod +x $RC
fi

LINE='cd /etc/slowdns && ./startdns'
grep -Fxq "$LINE" "$RC" || sed -i "/^exit 0/i $LINE" "$RC"
}
echo "Configurando inicio automático..."
fun_bar configurar_rc

# Pedir NS
echo ""
read -p "Ingresa tu Nameserver (NS): " nameserver
echo "$nameserver" > /etc/slowdns/infons

# Descargar start/restart SOCKS
descargar_scripts() {
cd /etc/slowdns
wget -q https://raw.githubusercontent.com/powermx/dnstt/main/socks/startdns
wget -q https://raw.githubusercontent.com/powermx/dnstt/main/socks/restartdns
chmod +x startdns restartdns
sed -i "s;1234;$nameserver;g" startdns restartdns
cp startdns restartdns /bin/
}
echo "Descargando scripts SOCKS..."
fun_bar descargar_scripts

cd /root

# Función finalizar
finalizar_instalacion() {
cp /root/server.key /root/server.pub /etc/slowdns/
configurar_firewall
cd /etc/slowdns && ./startdns
clear
echo -e "${GREEN}INSTALACIÓN COMPLETADA ✔${RESET}"
echo ""
echo -e "${YELLOW}Tu NS:${RESET} $(cat /etc/slowdns/infons)"
echo ""
echo -e "${YELLOW}Clave pública:${RESET}"
cat /root/server.pub
echo ""
echo -e "${YELLOW}Comando para Termux:${RESET}"
echo "curl -sO https://github.com/powermx/dnstt/raw/main/files/slowdns && chmod +x slowdns && ./slowdns $(cat /etc/slowdns/infons) $(cat /root/server.pub)"
echo ""
echo "Archivo guardado en /root/server.pub"
echo ""
read -p "Presiona ENTER para continuar..."
slowdns
}

# Verificar claves
if [[ -f server.key && -f server.pub ]]; then
    echo ""
    echo "Se encontraron claves existentes."
    echo "[1] Usar claves actuales"
    echo "[2] Generar nuevas claves"
    echo "[3] Descargar claves por defecto"
    echo "[x] Cancelar"
else
    echo ""
    echo "No se encontraron claves."
    echo "[1] Generar nuevas claves"
    echo "[2] Descargar claves por defecto"
    echo "[x] Cancelar"
fi

read -p "Selecciona una opción: " opcion

case $opcion in
1)
    echo "Usando claves actuales..."
    ;;
2)
    echo "Generando nuevas claves..."
    rm -f server.key server.pub
    cd /etc/slowdns
    ./dns-server -gen-key -privkey-file /root/server.key -pubkey-file /root/server.pub
    ;;
3)
    echo "Descargando claves por defecto..."
    cd /root
    wget -q https://raw.githubusercontent.com/powermx/dnstt/main/server.key
    wget -q https://raw.githubusercontent.com/powermx/dnstt/main/server.pub
    ;;
x)
    echo "Instalación cancelada."
    exit
    ;;
*)
    echo "Opción inválida."
    exit
    ;;
esac

finalizar_instalacion