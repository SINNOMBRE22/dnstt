#!/bin/bash

clear

# =============================
# BARRA DE PROGRESO
# =============================
fun_bar() {
    (
        $1 > /dev/null 2>&1
        touch $HOME/fim
    ) &

    tput civis
    echo -ne "  ESPERANDO ["
    while true; do
        for ((i=0; i<18; i++)); do
            echo -ne "#"
            sleep 0.1
        done
        [[ -e $HOME/fim ]] && rm $HOME/fim && break
        echo -ne "]"
        sleep 1
        tput cuu1
        tput dl1
        echo -ne "  ESPERANDO ["
    done
    echo -e "] OK"
    tput cnorm
}

echo ""
echo "====================================="
echo "        DETENIENDO SLOWDNS"
echo "====================================="
echo ""

# =============================
# DETENER SERVICIO
# =============================
fun_detener() {

    # Verificar si está corriendo
    if pgrep -f dns-server > /dev/null; then
        pkill -f dns-server
        sleep 2
    fi
}

fun_bar fun_detener

echo ""
echo "✔ SlowDNS detenido correctamente"
echo ""
read -p "Presiona ENTER para continuar..."

slowdns