#!/bin/bash

clear

# =============================
# COLORES
# =============================
R='\033[0;31m'; G='\033[0;32m'; Y='\033[1;33m'; B='\033[0;34m'
M='\033[0;35m'; C='\033[0;36m'; W='\033[1;37m'; N='\033[0m'
BOLD='\033[1m'
ROJO="\e[31m"; BLANCO="\e[97m"; CYAN="\e[36m"; AMARILLO="\e[33m"; RESET="\e[0m"

LINEA="${ROJO}══════════════════════════ / / / ══════════════════════════${RESET}"

# =============================
# BARRA DE PROGRESO
# =============================
fun_bar() {
    (
        $1 > /dev/null 2>&1
        touch $HOME/fim
    ) &

    tput civis
    echo -ne "  ${CYAN}ESPERANDO${RESET} ${ROJO}["
    while true; do
        for ((i=0; i<18; i++)); do
            echo -ne "${ROJO}#${RESET}"
            sleep 0.1
        done
        [[ -e $HOME/fim ]] && rm $HOME/fim && break
        echo -ne "${ROJO}]${RESET}"
        sleep 1
        tput cuu1
        tput dl1
        echo -ne "  ${CYAN}ESPERANDO${RESET} ${ROJO}["
    done
    echo -e "${ROJO}]${RESET} ${G}OK${RESET}"
    tput cnorm
}

echo ""
echo -e "$LINEA"
echo -e "${BOLD}${BLANCO}                    DETENIENDO SLOWDNS                    ${RESET}"
echo -e "$LINEA"
echo ""

# =============================
# DETENER SERVICIO
# =============================
fun_detener() {

    if pgrep -f dns-server > /dev/null; then
        pkill -f dns-server
        sleep 2
    fi
}

fun_bar fun_detener

echo ""
echo -e "$LINEA"
echo -e "${G}                 ✔ SlowDNS detenido correctamente                 ${RESET}"
echo -e "$LINEA"
echo ""

read -p "Presiona ENTER para continuar..."

slowdns