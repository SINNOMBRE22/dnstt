#!/bin/bash

# Verificar root
if [[ $EUID -ne 0 ]]; then
    echo "Este script debe ejecutarse como root"
    exit 1
fi

# Colores
RED='\033[1;31m'
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
WHITE='\033[1;37m'
GRAY='\033[1;37m'
RESET='\033[0m'

clear

echo -e "${GRAY}[${RED}-${GRAY}]${RED} ──────────────── SLOWDNS ────────────────${RESET}"

# Mostrar banner si existe figlet
if command -v figlet >/dev/null 2>&1; then
    figlet -p -f slant SlowDNS
else
    echo -e "${GREEN}        SLOWDNS${RESET}"
fi

echo -e "${GRAY}[${RED}-${GRAY}]${RED} ─────────────────────────────────────────${RESET}"
echo ""
echo -e "${GREEN}INFORMACIÓN DE SLOWDNS${RESET}"
echo ""

# Mostrar NS
if [[ -f /etc/slowdns/infons ]]; then
    echo -ne "${YELLOW}Tu NS:${WHITE} "
    cat /etc/slowdns/infons
else
    echo -e "${RED}No se encontró el archivo del NS.${RESET}"
fi

# Mostrar clave pública
if [[ -f /root/server.pub ]]; then
    echo ""
    echo -ne "${YELLOW}Tu clave pública:${WHITE} "
    cat /root/server.pub
    echo ""
    echo -e "${YELLOW}La clave está guardada en:${WHITE} /root/server.pub${RESET}"
    echo -e "${YELLOW}Guárdala en un lugar seguro, la necesitarás para conectarte.${RESET}"
else
    echo -e "${RED}No se encontró la clave pública.${RESET}"
fi

echo ""
echo -e "${YELLOW}› Presiona ENTER para continuar${RESET}"
read

slowdns